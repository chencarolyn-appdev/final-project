<h1>
  Add a new show
</h1>

<hr>

<%= render("show_templates/validation_failures.html.erb") %>

<form action="/insert_show_record" method="post">
  <div>
    <label for="title">
      Title
    </label>

    <input type="text" id="title" name="title" value="<%= @show.title %>">
  </div>

  <div>
    <label for="description">
      Description
    </label>

    <textarea id="description" name="description"><%= @show.description %></textarea>
  </div>

  <div>
    <label for="time">
      Time
    </label>

    <input type="text" id="time" name="time" value="<%= @show.time %>">
  </div>

  <div>
    <label for="channel_id">
      Channel
    </label>

<select name="channel_id" id="user_dropdown">
  
  <% @channels.each do |channel| %>
    <option value="<%= channel.id %>">
      <%= channel.name %>
    </option>
  <% end %>
</select>

  </div>

  <div>
    <label for="viewing_locations_id">
      Viewing locations
    </label>

<select name="viewing_locations_id" id="user_dropdown">
  
  <% @viewing_locations.each do |vl| %>
    <option value="<%= vl.id %>">
      <%= vl.location_name %>
    </option>
  <% end %>
</select>

  </div>

 <p></p> 
 <button>
    Create show
  </button>
</form>

<hr>

<a href = "/shows">
<button style="background-color:PaleGreen"> Go Home </button>
</a>
