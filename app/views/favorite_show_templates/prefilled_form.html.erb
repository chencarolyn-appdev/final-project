<h1>
  Edit: <%= @favorite_show.show_name %>
</h1>

<hr>

<%= render("favorite_show_templates/validation_failures.html.erb") %>

<form action="/update_favorite_show_record/<%= @favorite_show.show_name %>" method="post">
  <div>
    <label for="show_id">
      Show
    </label>

    <input type="text" id="show_id" name="show_id" value="<%= @favorite_show.show_name %>">
  </div>

  <div>
    <label for="user_id">
      Viewing Location
    </label>

    <input type="text" id="user_id" name="user_id" value="<%= @favorite_show.vl %>">
  </div>

  <p></p>
  <button style ="background-color:Pink">
    Update favorite show
  </button>
</form>

<hr>

<a href="/favorite_shows">
  Go back
</a>
